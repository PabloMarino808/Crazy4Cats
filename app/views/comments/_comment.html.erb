<div id="<%= dom_id comment %>">
  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>

  <p>
    <strong>User:</strong>
    
    <% if comment.anonymous %>
      Anonymous
    <% else %>
      <%= comment.user.email %>
    <% end %>    
  </p>

  <p>
    <strong>Post:</strong>
    <%= comment.post_id %>
  </p>

</div>
